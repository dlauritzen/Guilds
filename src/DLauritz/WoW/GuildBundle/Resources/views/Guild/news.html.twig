{% extends '::base.html.twig' %}

{% block title %}{{ guild.name }} - Recent News{% endblock %}

{% block body %}

<div class="container">
  {% if error is defined and error is not null %}
  <div class="row">
    <div class="span10 offset1">
      <p><strong>Error:</strong> {{error}}</p>
    </div>
  </div>
  {% endif %}

  <div class="row">
    <div class="span12">
      <h2 class="page-header">News</h2>
      {% if guild.news is not empty %}
      <table class="table">
	{% for event in guild.news %}
	{% include
	'DLauritzWoWGuildBundle:Guild:newsarticle.html.twig' with {'event': event} %}
	{% endfor %}
      </table>
      {% else %}
      <div class="center"><em>No News</em></div>
      {% endif %}
    </div>
  </div>

<div class="row">
  <hr class="span12" />
</div>

<div class="row">
  <div class="span12">
    <ul class="unstyled">
      <li><strong>Data Last Modified:</strong> {{ lastModified|wowdate }}</li>
      <li><strong>Source Data:</strong> <a href="{{ url|raw }}">{{url}}</a></li>
    </ul>
  </div>
</div>

</div>

{% endblock %}
